@model List<Africa.Modelo.Ropa>
@{
}
<form asp-page="Galeria" method="post" asp-page-handler="Buscar">
    <input type="text" name="PrendaBuscar" placeholder="Buscar por Prenda" />
    <input type="submit" class="btn btn-warning" value="Buscar" />
</form>

<br>
<div class="table-responsive">
    <table class="table table-dark" class="table align-middle">
        <thead>
            <tr>
                <th class="text-center"><a asp-page="./Galeria" asp-route-orden="PorID" class="btn btn-dark">ID</a></th>
                <th class="text-center"><a asp-page="./Galeria" asp-route-orden="PorNombre"
                        class="btn btn-dark">Nombre</a></th>
                <th class="text-center"><a asp-page="./Galeria" asp-route-orden="PorPrenda"
                        class="btn btn-dark">Prenda</a></th>
                <th class="text-center"><a asp-page="./Galeria" asp-route-orden="PorCantidad"
                        class="btn btn-dark">Stock</a></th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rop in Model)
            {
                <tr>
                    <td class="text-center">@rop.ID</td>
                    <td class="text-center">@rop.NombrePrenda</td>
                    <td class="text-center">@rop.Prenda</td>
                    <td class="text-center">@rop.CantidadStock</td>
                    <td class="text-center">
                        <a asp-page="./Editar" asp-route-id="@rop.ID" class="btn btn-dark">Editar</a>
                        |
                        <a asp-page="Galeria" asp-page-handler="Eliminar" asp-route-IDEliminar="@rop.ID"
                        class="btn btn-dark"
                        onclick="return confirm('Â¿Esta seguro que decea eliminar esta prenda?')">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form method="post">
        <input type="submit" value="Ingresar una Prenda" class="btn btn-dark">
    </form>
</div>